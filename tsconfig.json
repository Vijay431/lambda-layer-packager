{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "buildOptions": {
    "incremental": true,
    "verbose": true
  },
  "exclude": [
    "*.zip",
    "*.tgz",
    "test"
  ]
}
